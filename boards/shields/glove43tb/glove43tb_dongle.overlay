#include "glove43tb.dtsi"

/ {
    /* 1. コンパイルエラーを防ぐためのダミーピン（仮想インターフェース）の定義 */
    xiao_d: xiao_d {
        gpio-controller;
        #gpio-cells = <2>;
    };

    /* 2. キースキャンをダミー（Null0）に流す設定 */
    chosen {
        zmk,kscan = &mock_kscan;
    };

    mock_kscan: mock_kscan_0 {
        compatible = "zmk,kscan-mock";
        columns = <0>;
        rows = <0>;
        events = <0>;
    };
};

/* トラックボールのイベントリスナーは子機（右手）に任せるため無効化 */
&trackball_listener {
    status = "disabled";
};
